<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactDetailActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="15dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:background="@drawable/border_bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="13dp"
                android:layout_height="40dp"
                android:paddingTop="3dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_bracket" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contacts"
                android:textColor="@color/gray_3"
                android:textStyle="bold"
                android:textSize="45dp"/>
        </LinearLayout>
    </LinearLayout>

    <!--image view for contact-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar">
        <com.jgabrielfreitas.core.BlurImageView
            android:id="@+id/idIVBackground"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerCrop"
            android:foreground="@drawable/gradient_background"
            />
        <!--text view for displaying user name-->
        <ImageView
            android:id="@+id/idIVContact"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/round_outline_large"
            android:clipToOutline="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_launcher_background" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/idETName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageTab"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/border_bottom"
        android:padding="30dp"
        android:singleLine="true"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="@color/gray_3"
        android:textSize="30dp"
        android:textStyle="bold"
        android:imeOptions="actionDone"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idETName"
        android:orientation="vertical"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:paddingTop="15dp"
        android:paddingLeft="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_org"
                android:paddingRight="10dp"/>
            <EditText
                android:id="@+id/idETOrganization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Organization"
                android:textColor="@color/gray_3"
                android:background="@android:color/transparent"
                android:textSize="15dp"
                android:imeOptions="actionDone"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone"
                android:paddingRight="10dp"/>
            <EditText
                android:id="@+id/idETPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Phone"
                android:textColor="@color/gray_3"
                android:background="@android:color/transparent"
                android:textSize="15dp"
                android:inputType="phone"
                android:imeOptions="actionDone"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:paddingTop="3dp"
                android:paddingRight="10dp"/>
            <EditText
                android:id="@+id/idETEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Email"
                android:textColor="@color/gray_3"
                android:background="@android:color/transparent"
                android:textSize="15dp"
                android:imeOptions="actionDone"
                android:singleLine="true"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="17dp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/idCVMessage"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginRight="7dp"
            app:cardBackgroundColor="@color/message"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_message" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idCVCall"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="7dp"
            app:cardBackgroundColor="@color/call"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_call" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>